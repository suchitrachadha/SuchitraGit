<Window x:Class="NewUserWPFApp.Handlers.RemoveUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewUserWPFApp.Handlers"
        mc:Ignorable="d"
        Title="RemoveUser" Height="200" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Width="500" Height="50" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="0">
            Enter User ID:
        </Label>
        <TextBox Grid.Column="1" Name="UIRemoveUserId" Height="30" Width="400" FontSize="14" FontWeight="Bold" Grid.Row="0">
        </TextBox>
        <Button Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center"
          Name="RemoveUserButton" Margin="2,0,2,2" Background="#FF55F710" Width="200" Click="RemoveUserFromList" Height="26" VerticalAlignment="Bottom">
            Remove User
        </Button>
        

    </Grid>
</Window>
