<Window x:Class="NewUserWPFApp.Handlers.InsertUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewUserWPFApp.Handlers"
        mc:Ignorable="d"
        Title="InsertUser" Height="450" Width="800">
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Width="200" HorizontalAlignment="Left" Grid.Row="0">
            Enter Position:
        </Label>
        <TextBox Grid.Row="0" Grid.Column="1" 
           Name="UIInsertPosition" Margin="0,5,10,5" Width="280"/>
        <Label Width="200" HorizontalAlignment="Left" Grid.Row="1">
            Enter first name:
        </Label>
        <TextBox Grid.Row="1" Grid.Column="1" 
           Name="UIInsertFirstName" Margin="0,5,10,5" Width="280"/>

        <Label Grid.Row="2" Width="200" HorizontalAlignment="Left" >
            Enter last name:
        </Label>
        <TextBox Grid.Row="2" Grid.Column="1" 
           Name="UIInsertLastName" Margin="0,5,10,5" Width="280"/>
        <Label Grid.Row="3" Width="200" HorizontalAlignment="Left" >
            Enter Email Address:
        </Label>
        <TextBox Grid.Row="3" Grid.Column="1" 
           Name="UIInsertEmailAddr" Margin="0,5,10,5" Width="280"/>
        <Label Grid.Row="4" Width="200" HorizontalAlignment="Left" >
            Enter Goal Description:
        </Label>
        <TextBox Grid.Row="4" Grid.Column="1" 
           Name="UIInsertGoalDesc" Margin="0,5,10,5" Width="280"/>

        <Button Grid.Row="5" Grid.Column="0" 
          Name="insert" Margin="2,0,2,2" Background="#FF55F710" Width="200" Click="InsertUserToList" Height="26" VerticalAlignment="Bottom">
            Insert User
        </Button>

        <Button Grid.Row="5" Grid.Column="1" 
          Name="Clear" Click="ClearForm" Margin="45,0,45,0" Background="#FFF4D01A" Height="26" VerticalAlignment="Center">
            Clear Details
        </Button>
    </Grid>

</Window>
