<Window x:Class="NewWPFProductApp.Handlers.ViewProductByCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewWPFProductApp.Handlers"
        mc:Ignorable="d"
        Title="ViewProductByCategory" Height="200" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Width="500" Height="50" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="0">
            Enter Product ID:
        </Label>
        <TextBox Grid.Column="1" Name="UIViewByProductCategoryId" Height="30" Width="400" FontSize="14" FontWeight="Bold" Grid.Row="0">
        </TextBox>
        <Button Grid.Row="1" HorizontalAlignment="Center"
          Name="ViewByProductCategoryButton" Margin="0,2,0,2" Background="#FF55F710" Width="200" Click="ViewByProductCategoryList">
            View by Product Category
        </Button>


    </Grid>
</Window>
